# =================================================================
# 应用基础配置 (AppConfig)
# =================================================================
PROJECT_NAME="Milvus FAQ System"

# =================================================================
# 日志配置 (BaseLoggingSettings -> logging__)
# =================================================================
LOGGING__LOG_LEVEL=INFO
LOGGING__LOG_DIR=logs
LOGGING__LOG_RETENTION="30 days"
LOGGING__LOG_ROTATION="10 MB"

# =================================================================
# LLM 配置 (BaseLLMSettings -> llm__)
# =================================================================
LLM__API_KEY=YOUR_API_KEY_HERE
LLM__BASE_URL=https://api.deepseek.com/v1
LLM__MODEL=deepseek-chat
LLM__TEMPERATURE=0.7
LLM__TIMEOUT=60

# =================================================================
# Milvus 向量库配置 (MilvusSettings -> milvus__)
# =================================================================
MILVUS__URI=http://localhost:19530
MILVUS__TOKEN=
MILVUS__COLLECTION_NAME=faq_collection
MILVUS__DIMENSION=512

# =================================================================
# Embedding 模型配置 (EmbeddingSettings -> embedding__)
# =================================================================
EMBEDDING__MODEL_NAME=BAAI/bge-small-zh-v1.5
EMBEDDING__CACHE_FOLDER=./milvus_faq/model_cache

# =================================================================
# 文档切分配置 (SplitterSettings -> splitter__)
# =================================================================
SPLITTER__CHUNK_SIZE=512
SPLITTER__CHUNK_OVERLAP=50
SPLITTER__SEMANTIC_BUFFER_SIZE=1
SPLITTER__SEMANTIC_BREAKPOINT_PERCENTILE=95

# =================================================================
# RAG 检索配置 (RAGSettings -> rag__)
# =================================================================
RAG__SIMILARITY_TOP_K=3
RAG__SIMILARITY_THRESHOLD=0.7

# =================================================================
# 数据管理配置 (DataSettings -> data__)
# =================================================================
DATA__DATA_DIR=milvus_faq/data
DATA__STATE_FILE=.file_state.json
