# Graph RAG System 配置模板

# LLM 配置
LLM__API_KEY=your_api_key_here
LLM__BASE_URL=https://api.deepseek.com
LLM__MODEL=deepseek-chat
LLM__TEMPERATURE=0.1
LLM__TEMPERATURE_TEXT=1.0
LLM__TEMPERATURE_JSON=0.0

# Milvus 配置
MILVUS__URI=http://localhost:19530
MILVUS__TOKEN=
MILVUS__COLLECTION_NAME=graph_rag_collection
MILVUS__DIMENSION=512
MILVUS__EMBED_CACHE_DIR=./graph_rag/embed_cache

# Elasticsearch 配置
ES__URL=http://localhost:9200
ES__INDEX_NAME=graph_rag_index

# Neo4j 配置
NEO4J__URI=bolt://localhost:7687
NEO4J__USERNAME=neo4j
NEO4J__PASSWORD=password

# RAG 权重配置
RAG__VECTOR_WEIGHT=0.5
RAG__KEYWORD_WEIGHT=0.3
RAG__GRAPH_WEIGHT=0.2
RAG__MIN_SCORE_THRESHOLD=0.2
RAG__TOP_K=5

# 数据配置
DATA__DATA_DIR=./graph_rag/data
DATA__RAG_DIR=./graph_rag/data/rag_documents
DATA__ES_DIR=./graph_rag/data/es_documents
DATA__KG_DIR=./graph_rag/data/kg_documents
DATA__RAG_STATE_FILE=.rag_state.json
DATA__ES_STATE_FILE=.es_state.json
DATA__KG_STATE_FILE=.kg_state.json

# 日志配置
LOGGING__LOG_LEVEL=INFO
LOGGING__LOG_DIR=./graph_rag/logs
LOGGING__LOG_RETENTION=30 days
LOGGING__LOG_ROTATION=10 MB
